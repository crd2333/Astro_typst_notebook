---
const { sections, section, topics_with_files, topic, file } = Astro.props;
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro"
import '../styles/global.css';
---

<html lang="zh-cn">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Header sections={sections} section={section} />

    <div class="content">

      <Navigation section={section} topics_with_files={topics_with_files} topic={topic} file={file} />

      <main class="main-content">
        <slot />
      </main>

    </div>

  </body>
</html>

<style>
  . {
    /* margin-top: 0; */
    padding: 0;
    box-sizing: border-box;
  }
</style>